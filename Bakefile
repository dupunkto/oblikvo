#!/bin/bash -eu

build() {
  clean
  esbuild src/main.ts --bundle --minify --sourcemap --copy-files --outfile=dist/dist/main.js
  cp public/* dist/
}

clean() {
  [ -e "dist" ] && rm -rf dist
  [ -e "public/main.js" ] && rm -rf public/main.js
}

serve() {
  trap clean 1 2 3 6
  esbuild src/main.ts --bundle --outfile=public/main.js --watch --serve=4000 --servedir=public
}

format() {
  prettier --write .
}
